{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    // Ff your project isn't using TypeScript, it still has autocomplete
    "allowJs": true,

    // Skip library check
    "skipLibCheck": true,

    // "bun-types" is the important part
    "types": ["bun-types"]
  }
}
